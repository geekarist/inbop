<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_climbthere_sv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/useful_ll_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/useful_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/detail_image_desc"
            android:visibility="gone" />

        <TextView
            android:id="@+id/useful_tv_hours"
            style="@style/CustomBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_schedule_black_24dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_schedule_black_24dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="From 07:00 to 23:30" />

        <TextView
            android:id="@+id/useful_tv_prices"
            style="@style/CustomBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_attach_money_black_24dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Child 7.5 €. Student 12 €. Adult 13.5 €." />

        <TextView
            android:id="@+id/useful_tv_specificity"
            style="@style/CustomBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_note_black_24dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_note_black_24dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="Hard. Routes are longer, most of them are hangovers. Well equipped." />

        <TextView
            android:id="@+id/useful_tv_web"
            style="@style/CustomBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:drawableLeft="@drawable/ic_web_black_24dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_web_black_24dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="www.antrebloc.com" />

        <Button
            android:id="@+id/useful_bt_facebook"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_facebook_box_black_24dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_facebook_box_black_24dp"
            android:gravity="center_vertical"
            android:textAllCaps="false"
            android:visibility="gone"
            tools:text="https://www.facebook.com/antrebloc94" />

        <TextView
            android:id="@+id/useful_tv_email"
            style="@style/CustomBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:gravity="center_vertical"
            android:linksClickable="true"
            android:visibility="gone"
            tools:text="contact@antrebloc.com" />

    </LinearLayout>

</ScrollView>
